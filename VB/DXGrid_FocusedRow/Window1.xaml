<Window x:Class="DXGrid_FocusedRow.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Window1" Height="350" Width="450" xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">
    <DockPanel>
        <ListBox Name="listBox" Width="100">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text1}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <dxg:GridControl x:Name="grid">
            <dxg:GridControl.Columns>
                <dxg:GridColumn FieldName="Number1" />
                <dxg:GridColumn FieldName="Number2" />
                <dxg:GridColumn FieldName="Text1" />
                <dxg:GridColumn FieldName="Text2" />
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView x:Name="view" AutoWidth="True" NavigationStyle="Row" />
            </dxg:GridControl.View>
        </dxg:GridControl>
    </DockPanel>
</Window>
